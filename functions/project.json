{
  "name": "functions",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "functions/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "functions/lib",
        "main": "functions/src/index.ts",
        "tsConfig": "functions/tsconfig.json",
        "assets": []
      },
      "dependsOn": ["^build"]
    },
    "build-with-deps": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run shared-types:build && nx run functions:build"
      },
      "dependsOn": ["shared-types:build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["functions/src/**/*.{ts,tsx}"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run functions:build && npx firebase emulators:start"
      },
      "dependsOn": ["build"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run shared-types:build && yarn deploy",
        "cwd": "functions"
      },
      "dependsOn": ["shared-types:build"]
    },
    "shell": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn shell",
        "cwd": "functions"
      }
    }
  },
  "tags": ["type:app", "platform:firebase", "scope:backend"],
  "implicitDependencies": ["shared-types"]
}
