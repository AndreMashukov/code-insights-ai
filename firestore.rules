rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource (path-based)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // All user-scoped collections under users/{userId}/
    match /users/{userId} {
      // Documents subcollection
      match /documents/{documentId} {
        allow read, write: if isOwner(userId);
      }

      // Quizzes subcollection
      match /quizzes/{quizId} {
        allow read, write: if isOwner(userId);
      }

      // Directories subcollection
      match /directories/{directoryId} {
        function isValidDirectory() {
          return request.resource.data.name is string &&
                 request.resource.data.name.size() > 0 &&
                 request.resource.data.name.size() <= 100 &&
                 request.resource.data.level >= 0 &&
                 request.resource.data.level <= 10;
        }

        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && isValidDirectory();
        allow update: if isOwner(userId) && isValidDirectory();
        allow delete: if isOwner(userId);
      }

      // Rules subcollection
      match /rules/{ruleId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
